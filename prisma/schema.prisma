generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id        String  @id
  name      String
  latitude  Decimal
  longitude Decimal

  observedHydrologicalData   ObservedHydrologicalData[]
  observedMeteorologicalData ObservedMeteorologicalData[]
  forecastHydrologicalData   ForecastHydrologicalData[]

  @@map("stations")
}

model ObservedHydrologicalData {
  id        String   @id @default(uuid())
  date      DateTime
  flow      Decimal
  elevation Decimal
  rain      Decimal

  Station   Station @relation(fields: [stationId], references: [id])
  stationId String

  @@map("observed_hydrological_data")
}

model ObservedMeteorologicalData {
  id          String   @id @default(uuid())
  date        DateTime
  temperature Decimal
  humidity    Int
  Station     Station  @relation(fields: [stationId], references: [id])
  stationId   String

  @@map("observed_meteorological_data")
}

model ForecastHydrologicalData {
  id        String   @id @default(uuid())
  date      DateTime
  flow      Decimal
  elevation Decimal
  Station   Station  @relation(fields: [stationId], references: [id])
  stationId String

  @@map("forecast_hydrological_data")
}

model ObservedClimatology {
  id          String   @id @default(uuid())
  date        DateTime
  flow        Decimal
  elevation   Decimal

  @@map("observed_climatology")
}
