generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id        String  @id
  name      String
  latitude  Decimal
  longitude Decimal

  observedDailyWeather ObservedDailyWeather[]
  forecastDailyWeather ForecastDailyWeather[]

  @@map("stations")
}

model ObservedDailyWeather {
  id          String   @id @default(uuid())
  date        DateTime
  flow        Decimal
  elevation   Decimal
  rain        Decimal
  temperature Decimal

  Station    Station @relation(fields: [station_id], references: [id])
  station_id String

  @@map("observed_daily_weather")
}

model ForecastDailyWeather {
  id        String   @id @default(uuid())
  date      DateTime
  flow      Decimal
  elevation Decimal

  Station    Station @relation(fields: [station_id], references: [id])
  station_id String

  @@map("forecast_daily_weather")
}
