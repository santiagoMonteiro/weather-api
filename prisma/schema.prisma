generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id        String  @id
  name      String
  latitude  Decimal
  longitude Decimal

  observedDailyWeather ObservedWeather[]
  observedTemperature  ObservedTemperature[]
  forecastDailyWeather ForecastWeather[]

  @@map("stations")
}

model ObservedWeather {
  id        String   @id @default(uuid())
  date      DateTime
  flow      Decimal
  elevation Decimal
  rain      Decimal

  Station    Station @relation(fields: [stationId], references: [id])
  stationId String

  @@map("observed_weather")
}

model ObservedTemperature {
  id         String   @id @default(uuid())
  date       DateTime
  value      Decimal
  Station    Station  @relation(fields: [stationId], references: [id])
  stationId String

  @@map("observed_temperature")
}

model ForecastWeather {
  id        String   @id @default(uuid())
  date      DateTime
  flow      Decimal
  elevation Decimal

  Station    Station @relation(fields: [stationId], references: [id])
  stationId String

  @@map("forecast_weather")
}

model ObservedClimatology {
  id          String   @id @default(uuid())
  date        DateTime
  flow        Decimal
  elevation   Decimal
  rain        Decimal
  temperature Decimal
}
